{
  "name": "bluenile-app",
  "description": "",
  "image": "heroku/python",
  "scripts": {
    "postdeploy": "python manage.py db init && python manage.py db migrate && python manage.py db upgrade && python manage.py init_db"
  },
  "env": {
    "APP_SETTINGS": {
      "required": true
    },
    "EMAIL_DATA_DEST": {
      "required": true
    },
    "EMAIL_DATA_SOURCE": {
      "required": true
    },
    "FACEBOOK_APP_ID": {
      "required": true
    },
    "FACEBOOK_APP_SECRET": {
      "required": true
    },
    "FUELSDK_APP_SIGNATURE": {
      "required": true
    },
    "FUELSDK_AUTH_URL": {
      "required": true
    },
    "FUELSDK_CLIENT_ID": {
      "required": true
    },
    "FUELSDK_CLIENT_SECRET": {
      "required": true
    },
    "FUELSDK_DEFAULT_WSDL": {
      "required": true
    },
    "GOOGLE_APP_ID": {
      "required": true
    },
    "GOOGLE_APP_SECRET": {
      "required": true
    }
  },
  "formation": {
  },
  "addons": [
    "papertrail",
    "mongolab",
    "heroku-postgresql",
    "heroku-redis"
  ],
  "buildpacks": [
  ]
}
